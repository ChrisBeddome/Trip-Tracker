<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.TripTracker" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Trip Tracker</name>
    <description>
        Track your Trips!
    </description>
    <author email="#" href="#">
        Eric and Chris
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.1.0" />
    
     <platform name="android">
        <icon density="ldpi" src="www/images/icons/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="www/images/icons/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="www/images/icons/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="www/images/icons/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="www/images/icons/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="www/images/icons/drawable-xxxhdpi-icon.png" />
    </platform>
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
    <allow-intent href="market:*" />
    </platform>
</widget>
